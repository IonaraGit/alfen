<%- include ('../../partials/conf_header.ejs') %>
<%- include ('../../partials/header_sistema.ejs') %>

<body>
  <div class="principal" style="height: 100vh;">
    Id Empresa => <%=sessao.empresaId%>
    <br>
    <% empresas.forEach (empresa => { %>
      <% if (empresa.id == sessao.empresaId) { %>
        Nome empresa => <%=empresa.descricao%>
      <% } %>
    <% })%>
    <br>
    Colaborador => <%=sessao.nome%>
    <div class="row mt-3 mb-3">
      <div class="col-12 col-md-6">
        <a href="/admin/cliente/novo"><button type="submit" class="btn btn-outline-primary btn-novo-cliente">Cadastrar novo <i class="bi bi-plus-circle-dotted"></i></button></a>
      </div>

      <div class="col-12 col-md-6">
        <div class="input-group" style="width: 41%; float: right;">
          <input type="text" class="form-control" id="inlineFormInputGroupUsername" placeholder="Pesquisar">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="bi bi-search"></i>
            </div>
          </div>
        </div>
      </div>     
    </div>


    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" class="col-2">CPF</th>
          <th scope="col" class="col-8">Nome</th>
          <th scope="col" class="col-2">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% clientes.forEach(cliente => { %>
          <tr>
            <th scope="row"><%= cliente.cpf %></th>
            <td><%= cliente.nome %></td>
            <td class="d-flex justify-content-around">
              <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i></button>
              <a href="/admin/cliente/detalhes/<%= cliente.id %>" style="text-decoration: none;">
                <button type="button" class="btn btn-info ml-1 mr-1"><i class="bi bi-eye"></i></button>
              </a>
              <a href="/acesso/cliente/orcamento">
                <button type="button" class="btn btn-success"><i class="bi bi-clipboard-plus"></i></button>
              </a>
            </td>
            
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>

<%- include ('../../partials/footer.ejs') %>
